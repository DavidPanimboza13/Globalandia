<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    tools:context=".EleccionProductos">

    <Button
        android:id="@+id/btn_elegir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#712B79"
        android:text="Escoger productos"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="305dp"
        android:layout_height="313dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/distribuciones" />

    <Button
        android:id="@+id/btn_compras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#712B79"
        android:text="Mis compras"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_elegir"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btn_elegir"
        app:layout_constraintTop_toBottomOf="@+id/btn_elegir" />

    <Button
        android:id="@+id/btn_cerarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#712B79"
        android:text="Cerrar SesiÃ³n"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_compras"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_compras"
        app:layout_constraintTop_toBottomOf="@+id/btn_compras" />
</androidx.constraintlayout.widget.ConstraintLayout>